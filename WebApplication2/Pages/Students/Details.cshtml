@page
@model WebApplication2.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Info</h1>

<div>
    <h4>Danie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
        Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstMidName)
        </dd>
        <dt class="col-sm-2">
           Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.EnrollmentDate)
        </dd>
    </dl>
</div>
